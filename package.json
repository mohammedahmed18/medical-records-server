{
  "name": "@medical-records/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "dev:old": "pm2 start \"pnpm dev\" --name medical-records-server",
    "prisma-studio": "npx prisma studio",
    "start:debug": "nest start --debug --watch",
    "start:prod-beta": "pm2 start \"nest start\" --name medical-records-server",
    "start:prod": "node dist/main",
    "pm2": "pm2",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docs": "npm run generate_docs && git --git-dir=.git2/ add --all -f ./medical_records_api_docs && git --git-dir=.git2/ commit -m \"api docs\" && git --git-dir=.git2/ push origin main -f && echo the docs is live on : https://medical-server-api-docs.vercel.app/",
    "generate_docs": "npx insomnia-documenter --config api-docs.json --output ./medical_records_api_docs",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "src/**/*.+(ts)": [
      "eslint --fix"
    ],
    "src/**/*.{ts,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/apollo": "^10.2.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.2.0",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^4.9.0",
    "apollo-server-express": "^3.11.1",
    "argon2": "^0.30.3",
    "cache-manager": "^5.0.0",
    "cache-manager-redis-store": "^2.0.0",
    "chatgpt": "^5.2.4",
    "cloudinary": "^1.35.0",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.2.2",
    "redis": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.2.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/multer": "^1.4.7",
    "@types/node": "18.11.18",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "29.3.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.3.2",
    "prisma": "^4.9.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
